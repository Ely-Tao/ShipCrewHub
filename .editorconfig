# EditorConfig 配置文件
# 更多信息请访问 https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{html,css,scss,less}]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
